<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/popupbckgrnd"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tbx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate this Book"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_gravity="center"
         />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:weightSum="100"
        >
    <TextView
        android:id="@+id/tbx_bookname"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        android:layout_weight="50"

        />
    <TextView
        android:id="@+id/tbx_author"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Book Author"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        android:layout_weight="50"

        />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_bookcover"
        android:layout_width="64dp"
        android:layout_height="75dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_gravity="center"
        />
    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar"
        android:layout_width="236dp"
        android:layout_height="57dp"
        android:autofillHints="@color/colorPrimaryDark"
        android:background="@android:color/background_light"
        android:numStars="5"
        android:progressTint="@color/colorPrimary"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="100"
        >
    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonpopupl"
        android:text="Close"
        android:textColor="@android:color/background_light"
        android:layout_marginRight="1dp"
        android:layout_weight="50"
         />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonpopupr"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:visibility="visible"
        android:layout_marginLeft="1dp"
        android:layout_weight="50"
        />
    </LinearLayout>

</LinearLayout>